<%- include('header.maestros.ejs'); %>

    <div id="layoutSidenav_content">
        <main>
            <header class="page-header page-header-dark bg-dark pb-10">
                <div class="container-xl px-4">
                    <div class="page-header-content pt-4">
                        <div class="row align-items-center justify-content-between">
                            <div class="col-auto mt-4">
                                <h1 class="page-header-title">
                                    <div class="page-header-icon"><i data-feather="book-open"></i></div>
                                    Perfil Acádemico - Materia:  <b> <%= dataGradoMateria.Materia %></b>  - Grado:  <b><%= dataGradoMateria.Grado %></b> 
                                </h1>
                                <div class="page-header-subtitle">Seleccione una actividad para ingresar el perfil
                                    acádemico</div>
                            </div>
                        </div>
                    </div>
                </div>
            </header>
            <!-- Main page content-->
            <div class="container-xl px-4 mt-n10">
                <div class="card card-header-actions mb-4">
                    <div class="card-header p-5">
                        <div>
                            <a class="btn btn-primary me-2" href="/maestros/perfil"><i class="me-2"
                                    data-feather="arrow-left"></i> Atrás</a>
                        </div>
                    </div>
                    <div class="card-body">

                        <div class="page-header-subtitle">Seleccione una actividad e ingrese el perfil acádemico.
                            Bimestre : <b> <%= Role %>   </b>  - Año : <b><%= idYear %></b>  </div>
                        <hr>

                        <div class="row">
                            <div class="col-md-4">
                                <div class="container-xl px-4">
                                    <div class="card card-header-actions mb-4">
                                        <div class="card-header p-5">
                                            Acumulado 1 (30%)
                                        </div>
                                        <div class="card-body text-center">

                                            <%   if(! bloqueos.EstadoAct1 )   {     %>
                                                <i data-feather="alert-triangle"></i>
                                                <p>Permisos de edición
                                                    <b>deshabilitados </b>, por favor comuniquese con el administrador si
                                                    desea editar el perfil acádemico
                                                </p>
                                            <%}else { %>
                                                <%   if(!actividades[0][0].cantidad )   {     %>
                                                    <p> <b> Estado:</b> Pendiente de ingreso</p>
                                                    <a class="btn btn-green btn-block me-2" href="/maestros/addPerfil/<%=idUnion%>/1"><i
                                                            class="me-2" data-feather="folder-plus"></i> Ingresar perfil
                                                        acádemico</a>
                                                <%}else{ %>
                                                    <p> <b> Estado: </b> Perfil ingresado correctamente</p>
                                                    <a class="btn btn-primary btn-block me-2" href="/maestros/editPerfil/<%=idUnion%>/<%= actividades[0][0].idActividad %>/1"><i
                                                            class="me-2" data-feather="edit"></i> Editar perfil
                                                        acádemico</a>
                                                <%}%>
                                            <%}%>

                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="container-xl px-4">
                                    <div class="card card-header-actions mb-4">
                                        <div class="card-header p-5">
                                            Acumulado 2 (30%)
                                        </div>
                                        <div class="card-body text-center">
                                            <%   if(! bloqueos.EstadoAct2 )   {     %>
                                                <i data-feather="alert-triangle"></i>
                                                <p>Permisos de edición
                                                    <b>deshabilitados </b>, por favor comuniquese con el administrador si
                                                    desea editar el perfil acádemico
                                                </p>
                                            <%}else { %>
                                                <%   if(! actividades[1][0].cantidad )   {     %>
                                                    <p> <b> Estado:</b> Pendiente de ingreso</p>
                                                    <a class="btn btn-green btn-block me-2" href="/maestros/addPerfil/<%=idUnion%>/2"><i
                                                            class="me-2" data-feather="folder-plus"></i> Ingresar perfil
                                                        acádemico</a>
                                                <%}else{ %>
                                                    <p> <b> Estado: </b> Perfil ingresado correctamente</p>
                                                    <a class="btn btn-primary btn-block me-2" href="/maestros/editPerfil/<%=idUnion%>/<%= actividades[1][0].idActividad %>/2"><i
                                                        class="me-2" data-feather="edit"></i> Editar perfil
                                                    acádemico</a>
                                                <%}%>
                                            <%}%>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="container-xl px-4">
                                    <div class="card card-header-actions mb-4">
                                        <div class="card-header p-5">
                                            Examen (40%)
                                        </div>
                                        <div class="card-body text-center">
                                            <%   if(! bloqueos.EstadoAct3 )   {     %>
                                                <i data-feather="alert-triangle"></i>
                                                <p>Permisos de edición
                                                    <b>deshabilitados </b>, por favor comuniquese con el administrador si
                                                    desea editar el perfil acádemico
                                                </p>
                                            <%}else { %>
                                                <%   if(!actividades[2][0].cantidad )   {     %>
                                                    <p> <b> Estado:</b> Pendiente de ingreso</p>
                                                    <a class="btn btn-green btn-block me-2" href="/maestros/addPerfil/<%=idUnion%>/3"><i
                                                            class="me-2" data-feather="folder-plus"></i> Ingresar perfil
                                                        acádemico</a>
                                                <%}else{ %>
                                                    <p> <b> Estado: </b> Perfil ingresado correctamente</p>
                                                    <a class="btn btn-primary btn-block me-2" href="/maestros/editPerfil/<%=idUnion%>/<%= actividades[2][0].idActividad %>/3"><i
                                                        class="me-2" data-feather="edit"></i> Editar perfil
                                                    acádemico</a>
                                                <%}%>
                                            <%}%>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>




                    </div>
                </div>
            </div>
        </main>
        <%- include('footer.maestros.ejs'); %>