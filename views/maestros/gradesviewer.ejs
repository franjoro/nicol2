<%- include('header.maestros.ejs'); %>

    <div id="layoutSidenav_content">
        <main>
            <header class="page-header page-header-dark bg-dark pb-10">
                <div class="container-xl px-4">
                    <div class="page-header-content pt-4">
                        <div class="row align-items-center justify-content-between">
                            <div class="col-auto mt-4">
                                <h1 class="page-header-title">
                                    <div class="page-header-icon"><i data-feather="archive"></i></div>
                                    Grados
                                </h1>
                                <div class="page-header-subtitle">Visualiza las notas de la materia seleccionada.</div>
                            </div>
                        </div>
                    </div>
                </div>
            </header>
            <!-- Main page content-->
            <div class="container-xl px-4 mt-n10">
                <div class="card card-header-actions mb-4">
                    <div class="card-header p-5">
                        <a class="btn btn-primary me-2" href="/maestros/reportes"><i class="me-2"
                                data-feather="arrow-left"></i> Atr√°s</a>
                    </div>
                    <div class="card-body">

                        <table class="table table-bordered table-striped">
                            <thead>
                                <tr class="bg-blue text-black">
                                    <th>Carnet</th>
                                    <th>Nombre</th>
                                    <th>I 30%</th>
                                    <th>II 30%</th>
                                    <th>Examen</th>
                                    <th>Final</th>
                                </tr>
                            </thead>
                            <tbody>
                                <%dataOrdenada.forEach(element => {   %>
                                    <tr>
                                        <td><%= element.idAlumno %></td>
                                        <td><%= element.nombreAlumno %></td>
                                        <td><%= element.notas[0].notas[0].nota %></td>
                                        <td><%= element.notas[0].notas[1].nota %></td>
                                        <td><%= element.notas[0].notas[2].nota %></td>
                                        <td><%= element.notas[0].notaTotal %></td>
                                    </tr>
                                <%})%>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </main>
        <%- include('footer.maestros.ejs'); %>