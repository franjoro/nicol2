<%- include('../partials/header.ejs'); %>
    <div id="layoutSidenav_content">
        <main>
            <header class="page-header page-header-dark bg-primary pb-10">
                <div class="container-xl px-4">
                    <div class="page-header-content pt-4">
                        <div class="row align-items-center justify-content-between">
                            <div class="col-auto mt-4">
                                <h1 class="page-header-title">
                                    <div class="page-header-icon"><i data-feather="user"></i></div>
                                    Directorio de usuarios
                                </h1>
                                <div class="page-header-subtitle">
                                    Visualiza los usuarios con acceso a la plataforma y los permisos asignados.
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </header>
            <!-- Main page content-->
            <div class="container-xl px-4 mt-n10">
                <div class="card card-header-actions mb-4">
                    <div class="card-header p-5">
                        Directorio de usuarios
                            <button class="btn btn-md btn-warning" type="button">
                                Crear usuario administrador
                            </button>
                    </div>
                    <div class="card-body">
                        <table id="datatable">
                            <thead>
                                <tr>
                                    <th>Usuario</th>
                                    <th>Role</th>
                                    <th>Estado</th>
                                    <th>Opciones</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% usuarios.forEach((usuario)=> { %>
                                    <tr>
                                        <td>
                                            <%= usuario.Username %>
                                        </td>
                                        <td>
                                            <%= usuario.RoleText %>
                                        </td>
                                        <td>
                                            <%= usuario.Estado %>
                                        </td>
                                        <td class="col-md-4">
                                            <button class="btn btn-primary btn-sm">
                                                <i class="me-2" data-feather="edit"></i>Ver permisos
                                            </button>
                                            <button class="btn btn-info btn-sm">
                                                <i class="me-2" data-feather="edit"></i>Editar
                                            </button>
                                        </td>
                                    </tr>
                                    <%} )%>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </main>
        <%- include('../partials/footer.ejs'); %>
            <script src="/static/js/alertas.js"></script>
            <script src="/static/js/admin/estudiantes/estudiantes.js"></script>