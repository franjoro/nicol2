<%- include('../partials/header.ejs'); %>
    <div id="layoutSidenav_content">
        <main>
            <header class="page-header page-header-dark bg-primary pb-10">
                <div class="container-xl px-4">
                    <div class="page-header-content pt-4">
                        <div class="row align-items-center justify-content-between">
                            <div class="col-auto mt-4">
                                <h1 class="page-header-title">
                                    <div class="page-header-icon"><i data-feather="coffee"></i></div>
                                    Directorio de maestros
                                </h1>
                                <div class="page-header-subtitle">
                                    Visualiza toda la información de los maestros registrados
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </header>
            <!-- Main page content-->
            <div class="container-xl px-4 mt-n10">
                <div class="card card-header-actions mb-4">
                    <div class="card-header p-5">
                        Directorio de maestros
                        <div>
                            <% if(permisos.maestros.create){ %>
                            <button class="btn btn-md btn-warning" type="button" data-toggle="modal"
                                data-target="#modalMaestros">
                                Agregar maestro
                            </button>
                            <% } %>
                        </div>
                    </div>
                    <div class="card-body table-responsive">
                        <table id="datatable">
                            <thead>
                                <tr>
                                    <th>Nombres</th>
                                    <th>Apellidos</th>
                                    <th>Sexo</th>
                                    <th>Fecha de nacimiento</th>
                                    <th>Email</th>
                                    <th>Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </main>

        <div class="modal fade" id="modalMaestros" tabindex="-1" aria-hidden="true">
            <div class="modal-dialog modal-lg">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">Agregar maestro</h5>
                        <button type="button" class="btn btn-light" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true"><i data-feather="x"></i></span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <form id="formMaestros">
                            <div class="row">
                                <div class="form-group col-md-6">
                                    <label>Nombres</label>
                                    <input type="text" class="form-control" id="Nombre" name="Nombre"
                                        autocomplete="off" />
                                </div>
                                <div class="form-group col-md-6">
                                    <label>Apellidos</label>
                                    <input type="text" class="form-control" id="Apellido" name="Apellido"
                                        autocomplete="off" />
                                </div>
                            </div>
                            <div class="row">
                                <div class="form-group col-md-4">
                                    <label>Género</label>
                                    <select class="form-control" name="Genero" id="Genero">
                                        <option selected disabled>Seleccione Género</option>
                                        <option value="0">Hombre</option>
                                        <option value="1">Mujer</option>
                                    </select>
                                </div>
                                <div class="form-group col-md-4">
                                    <label>Fecha de nacimiento</label>
                                    <input type="date" class="form-control" id="FechaNac" name="FechaNac"
                                        autocomplete="off" />
                                </div>
                                <div class="form-group col-md-4">
                                    <label>Correo Electrónico</label>
                                    <input type="email" class="form-control" id="Email" name="Email"
                                        autocomplete="off" />
                                </div>
                            </div>
                        </form>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-danger" data-dismiss="modal">
                            Cancelar
                        </button>
                        <button type="button" class="btn btn-primary" id="btnGuardar">
                            Guardar
                        </button>
                    </div>
                </div>
            </div>
        </div>

        <div class="modal fade" id="editMaestro" tabindex="-1" aria-labelledby="editMaestro" aria-hidden="true">
            <div class="modal-dialog modal-lg">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">Editar maestro</h5>
                        <button type="button" class="btn btn-light" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true"><i data-feather="x"></i></span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <form id="formMaestrosEdit">
                            <div class="row">
                                <input type="hidden" name="idMaestro" id="idMaestro">
                                <div class="form-group col-md-6">
                                    <label>Nombres</label>
                                    <input type="text" class="form-control" id="NombreEdit" name="Nombre"
                                        autocomplete="off" />
                                </div>
                                <div class="form-group col-md-6">
                                    <label>Apellidos</label>
                                    <input type="text" class="form-control" id="ApellidoEdit" name="Apellido"
                                        autocomplete="off" />
                                </div>
                            </div>
                            <div class="row">
                                <div class="form-group col-md-4">
                                    <label>Género</label>
                                    <select class="form-control" name="Genero" id="GeneroEdit">
                                        <option selected disabled>Seleccione Género</option>
                                        <option value="0">Hombre</option>
                                        <option value="1">Mujer</option>
                                    </select>
                                </div>
                                <div class="form-group col-md-4">
                                    <label>Fecha de nacimiento</label>
                                    <input type="date" class="form-control" id="FechaNacEdit" name="FechaNac"
                                        autocomplete="off" />
                                </div>
                                <div class="form-group col-md-4">
                                    <label>Correo Electrónico</label>
                                    <input type="email" class="form-control" id="EmailEdit" name="Email"
                                        autocomplete="off" />
                                </div>
                            </div>
                        </form>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-danger" data-dismiss="modal">
                            Cancelar
                        </button>
                        <button type="button" class="btn btn-primary" id="btnGuardarEdit">
                            Guardar
                        </button>
                    </div>
                </div>
            </div>
        </div>


        <input type="hidden" id="permisoDelete" value="<%= permisos.maestros.delete %>">
        <input type="hidden" id="permisoUpdate" value="<%= permisos.maestros.update %>">



        <%- include('../partials/footer.ejs'); %>
            <script src="/static/js/alertas.js"></script>
            <script src="/static/js/admin/maestros/maestros.js"></script>