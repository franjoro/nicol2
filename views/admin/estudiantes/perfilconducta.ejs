<%- include('../partials/header.ejs'); %>
    <div id="layoutSidenav_content">
        <main>
            <header class="page-header page-header-dark bg-primary pb-10">
                <div class="container-xl px-4">
                    <div class="page-header-content pt-4">
                        <div class="row align-items-center justify-content-between">
                            <div class="col-auto mt-4">
                                <h1 class="page-header-title">
                                    <div class="page-header-icon"><i data-feather="user"></i></div>
                                    Perfil Académico
                                </h1>
                                <div class="page-header-subtitle">
                                    Visualiza todos los códigos aplicados del alumno
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </header>
            <!-- Main page content-->

            <div class="row">
                <div class="col-md-4">
                    <div class="px-4 mt-n10">
                        <div class="card card-header-actions mb-4">
                            <div class="card-header p-5">
                                Información personal
                            </div>
                            <div class="card-body table-responsive">
                                <p> <span class="fw-700">Carnet: </span> <%= idAlumno %> </p>
                                <p> <span class="fw-700">Nombre: </span>  <%= datosAlumno.Nombre %> </p>
                                <p> <span class="fw-700">Apellidos: </span> <%= datosAlumno.Apellido %> </p>
                                <p> <span class="fw-700">Grado: </span> <%= datosGrado.nombre %> </p>
                                <p> <span class="fw-700">Puntaje bimestre: </span> <%= datosAlumno.puntaje %>  </p>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-8">

                    <div class="px-4 mt-n10">
                        <div class="card card-header-actions mb-4">
                            <div class="card-header p-5">
                                Códigos aplicados
                                <div>
                                    <button class="btn btn-md btn-success" type="button" data-toggle="modal"
                                        data-target="#agregarAlumno">
                                        Descargar reporte
                                    </button>
                                </div>
                            </div>
                            <div class="card-body table-responsive">
                                <table class="table table-striped table-hover">
                                    <thead>
                                        <tr>
                                            <th>Código Aplicado</th>
                                            <th>Valor</th>
                                            <th>Maestro</th>
                                            <th>Descripción</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% codigos.forEach( codigo=> {  %>
                                           <tr>
                                               <td><%= codigo.Codigo %></td>
                                               <td><%= codigo.valor %></td>
                                               <td><%= codigo.NombreMaestro %></td>
                                               <td><%= codigo.Observacion %></td>
                                           </tr> 
                                        <%})%>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </main>


        <%- include('../partials/footer.ejs'); %>
            <script src="/static/js/alertas.js"></script>
            <!-- <script src="/static/js/admin/estudiantes/estudiantes.js"></script> -->
    </div>