    <body class="bg-primary">
        <div id="layoutAuthentication">
            <div id="layoutAuthentication_content">
                <main>
                    <div class="container-xl px-4">
                        <div class="row justify-content-center">
                            <div class="col-lg-5">
                                <!-- Basic login form-->
                                <div class="card shadow-lg border-0 rounded-lg mt-5">
                                    <div class="card-header justify-content-center">
                                        <img class="card-img-top p-5" src="/static/assets/img/branding/logo_blue.svg" alt="">
                                        <!-- <h3 class="fw-light my-4">Login</h3> -->
                                    </div>
                                    <div class="card-body">
                                        <!-- Login form-->
                                        <form id="loginForm">
                                            <div class="mb-3">
                                                <label class="small mb-1" for="inputEmailAddress">Nombre de usuario</label>
                                                <input class="form-control" id="inputEmailAddress" type="text" name="usuario" placeholder="Ingresa tu nombre de usuario" />
                                            </div>
                                            <div class="mb-3">
                                                <label class="small mb-1" for="inputPassword">Contraseña</label>
                                                <input class="form-control" id="inputPassword" type="password" name="password" placeholder="Ingresa tu contraseña" />
                                            </div>
                                        </form>
                                        <div class="d-flex align-items-center justify-content-between mt-4 mb-0">
                                            <a class="small" href="#" data-toggle="modal" data-target="#passwordRecover" >¿Olvidaste tu contraseña?</a>
                                            <button class="btn btn-primary" id="btnGuardar">Ingresar</button>
                                        </div>
                                    </div>
                                    <div class="card-footer text-center">
                                        <!-- <div class="small"><a href="auth-register-basic.html">¿Necesitas una cuenta?</a></div> -->
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </main>
            </div>





