<%- include('header.alumnos.ejs', dataAlumno); %>
    <div id="conducta">
        <div class="row mt-5">
            <div class="col-lg-6 mb-4">
                <!-- Billing card 1-->
                <div class="card h-100 border-start-lg border-start-primary">
                    <div class="card-body">
                        <div class="small text-muted">Puntaje</div>
                        <div class="h3">
                            <%= dataAlumno.puntaje %>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-6 mb-4">
                <!-- Billing card 2-->
                <div class="card h-100 border-start-lg border-start-success">
                    <div class="card-body">
                        <div class="small text-muted">Calificación</div>
                        <div class="h3">¡Excelente!</div>
                    </div>
                </div>
            </div>
        </div>
        <span>Códigos aplicados:</span>
        <table class="table table-bordered table-hover my-2">
            <thead>
                <tr>
                    <th scope="col">Código aplicado</th>
                    <th scope="col">Valor</th>
                    <th scope="col">Descripción del maestro: </th>
                </tr>
            </thead>
            <tbody>
                <% codigosAplicados.forEach( codigo=> { %>
                    <tr>
                        <td>
                            <%= codigo.Codigo %>
                        </td>
                        <td>
                            <%= codigo.valor %>
                        </td>
                        <td>
                            <%= codigo.Observacion %>
                        </td>
                    </tr>
                    <%})%>
            </tbody>
        </table>
    </div>
    <div id="observaciones" class="d-none">
        <span>Observaciones:</span>
        <table class="table table-bordered table-hover my-2">
            <thead>
                <tr>
                    <th scope="col">Maestro</th>
                    <th scope="col">Descripción de la observación</th>
                </tr>
            </thead>
            <tbody>
                <% observaciones.forEach( obs=> { %>
                    <tr>
                        <td>
                            <%= obs.NombreMaestro %>
                        </td>
                        <td>
                            <%= obs.descripcion %>
                        </td>
                    </tr>
                    <%})%>
            </tbody>
        </table>
    </div>
    <div id="notas" class="d-none">
        <!-- Materia -->
        <div class="row">
            <div class="col-md-12 table-responsive" id="htmlNotas"></div>
        </div>
    </div>

    
    <input type="hidden" id="roleBimestre" value="<%= roleBimestre %>">
    <input type="hidden" id="idBimestre" value="<%= idBimestre %>">
    <input type="hidden" id="carnet" value="<%= dataAlumno.carnet %>">
    <%- include('footer.alumnos.ejs'); %>